	<append xpath="/blocks/block[@name='terrGravel']">
			<drop event="Destroy"  name="resourceSphalerite"  count="50,100"  prob=".06" />
	</append>
	<append xpath="/blocks/block[@name='terrDesertGround']">
			<drop event="Destroy"  name="resourceSphalerite"  count="35,75"  prob=".08" />
	</append>
	<append xpath="/blocks/block[@name='terrBurntForestGround']">
			<drop event="Harvest"  name="resourceSphalerite"  count="22"  tag="oreWoodHarvest" />
