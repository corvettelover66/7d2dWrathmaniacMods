			<item group="perkBooks"  prob=".1" />
			<item group="modGunT2" prob="0.05"/>
		</lootcontainer>
		<!-- Bear -->
		<lootcontainer id="221" count="1,5" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="6" >
