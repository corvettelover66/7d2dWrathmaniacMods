			<item name="gunHandgunT1Pistol"  prob=".03" />
			<item group="groupAmmoRegular"  prob=".4"/>
			<item group="groupAmmoAdvanced" prob=".05"/>
		</lootcontainer>
		<!-- Starting loot containers at 2 hundred as we are at the max at 1023 -->
		<!-- Timid animal ground-->
		<lootcontainer id="224" count="2" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="2" >
			<item name="resourceYuccaFibers" prob="2"  count="1,3" />
			<item group="seeds"  count="1" prob=".5"  />
		</lootcontainer>
		<!-- Timid animal air-->
		<lootcontainer id="225" count="2" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="2" >
			<item name="resourceYuccaFibers" count="1,3" prob="2" />
			<item name="foodEgg" prob=".5" />
			<item group="seedsInAnimal"  count="1" prob=".5"  />
		</lootcontainer>
		<!-- Zombie vulture -->
		<lootcontainer id="226" count="2" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="3" >
