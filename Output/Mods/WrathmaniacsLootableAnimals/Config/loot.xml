			<item name="foodEgg" prob=".5" count="1,2" />
			<item group="seedsInAnimal"  count="1" prob=".1"  />
		</lootcontainer>
		<!-- Timid animal ground big-->
		<lootcontainer id="228" count="4" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="3" >
			<item name="resourceYuccaFibers" prob="2"  count="1,3" />
			<item group="seeds"  count="1" prob=".5"  />
		</lootcontainer>
