		<lootcontainer id="220" count="1,6" size="6,10"  sound_open="UseActions/open_corpse"  sound_close="UseActions/close_corpse"  loot_quality_template="qualBaseTemplate"  destroy_on_close="false"  open_time="8" >
			<item name="foodRottingFlesh" count="1,15" prob ="2.5"/>
			<item group="junk" prob ="1" />
			<item name="resourceBone" count="1,8" prob ="1"/>
			<item name="gunHandgunT1Pistol" prob=".03" />
			<item name="gunHandgunT2Magnum44" prob=".02" />
			<item name="gunShotgunT1DoubleBarrel" prob=".03" />
			<item group="groupAmmoRegular" prob=".5"/>
