<WrathmaniacsMiningStation>
	<append xpath="/windows">
		<window name="windowToolsMiningStationChips"  width="228"  height="121"  cursor_area="true"  panel="Right" >
			<panel style="header.panel" >
				<sprite sprite="ui_game_symbol_wrench"  style="header.icon"/>
				<label text="TOOLS"  style="header.name"  text_key="xuiTools" />
			</panel>
			<rect name="content"  pos="0,-146"  height="75"  depth="0"  disablefallthrough="true" >
				<grid name="inventory"  pos="3,-3"  rows="5"  cols="2"  cell_width="75"  cell_height="75"  repeat_content="true"  controller="WorkstationToolGrid"  required_tools="resourceIronOreMinerChip,meleeToolPickT3Auger,resourceCoalOreMinerChip,meleeToolPickT3Auger,resourcePotassiumNitrateOreMinerChip,meleeToolPickT3Auger,resourceLeadOreMinerChip,meleeToolPickT3Auger,resourceShaleOreMinerChip,meleeToolPickT3Auger"  required_tools_only="true" >
					<item_stack name="0"  controller="RequiredItemStack" />
				</grid>
			</rect>
		</window>
	</append>
</WrathmaniacsMiningStation>
